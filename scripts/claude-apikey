#!/bin/bash

# Source utils
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$SCRIPT_DIR/claude-switcher-utils.sh"

# Handle --version flag
if [[ "$1" == "--version" ]] || [[ "$1" == "-v" ]]; then
    echo "claude-switcher v$SWITCHER_VERSION"
    exit 0
fi

# Load config and secrets
load_config

# Generate unique session identifier
CLAUDE_SESSION_ID="anthropic-$$-$(date +%s)"
export CLAUDE_SESSION_ID

print_status "Switching to Claude Anthropic API mode..."
print_status "Session ID: $CLAUDE_SESSION_ID"

# Store existing environment variables
SAVED_ANTHROPIC_MODEL="$ANTHROPIC_MODEL"
SAVED_CLAUDE_CODE_USE_BEDROCK="$CLAUDE_CODE_USE_BEDROCK"
SAVED_ANTHROPIC_API_KEY="$ANTHROPIC_API_KEY"

# Disable Bedrock
export CLAUDE_CODE_USE_BEDROCK=0
unset AWS_BEARER_TOKEN_BEDROCK

# Source settings manager for apiKeyHelper management
source "$SCRIPT_DIR/claude-settings-manager.sh"

# Save current apiKeyHelper state so we can restore it on exit
# This preserves user's existing apiKeyHelper if they have one
save_api_key_helper_state

# Add our apiKeyHelper to settings.json
print_status "Configuring apiKeyHelper for Anthropic API mode..."
if add_api_key_helper; then
    print_status "apiKeyHelper configured"
else
    print_error "Failed to configure apiKeyHelper"
    exit 1
fi

# Set mode for apiKeyHelper to provide Anthropic API key
# This causes apiKeyHelper to return ANTHROPIC_API_KEY, enabling API auth
cat > "$CONFIG_DIR/current-mode.sh" << 'EOF'
# Current claude-switcher mode
# Used by apiKeyHelper to determine authentication method
export CLAUDE_SWITCHER_MODE="anthropic"
EOF

# Ensure API Key is present
if [ -z "$ANTHROPIC_API_KEY" ]; then
    print_error "ANTHROPIC_API_KEY is not set"
    print_error ""
    print_error "To use Anthropic API mode, you need to:"
    print_error "  1. Set ANTHROPIC_API_KEY in your secrets.sh file"
    print_error "  2. Get an API key from: https://console.anthropic.com/"
    print_error ""
    print_error "Example secrets.sh:"
    print_error "  export ANTHROPIC_API_KEY=\"sk-ant-...\""
    exit 1
fi

# Note: We do NOT export ANTHROPIC_API_KEY here to avoid conflict with apiKeyHelper
# The apiKeyHelper script will read it directly from secrets.sh
# This prevents Claude CLI from seeing both a token (apiKeyHelper) and an API key (env var)

# Parse arguments to select model
parse_model_args "ANTHROPIC" "$@"

# Strip our custom flags
ARGS=()
while [[ $# -gt 0 ]]; do
    case $1 in
        --opus|--sonnet|--haiku)
            shift
            ;;
        --model)
            shift 2
            ;;
        *)
            ARGS+=("$1")
            shift
            ;;
    esac
done

print_success "Claude Anthropic API mode activated"
print_status "- Using Anthropic API"
print_status "- Model: $ANTHROPIC_MODEL"
print_status "- Mode set to 'anthropic' (apiKeyHelper will provide API key)"

print_status "Launching Claude Code..."

# Unset ANTHROPIC_API_KEY to prevent auth conflict with apiKeyHelper
# The helper script will provide the key by reading secrets.sh internally
unset ANTHROPIC_API_KEY

restore_environment() {
    print_status "Restoring original environment variables and settings..."
    
    # Restore apiKeyHelper to its original state (before we modified it)
    # This preserves user's existing apiKeyHelper if they had one
    restore_api_key_helper_state
    
    # Restore environment variables
    if [ -n "$SAVED_ANTHROPIC_MODEL" ]; then
        export ANTHROPIC_MODEL="$SAVED_ANTHROPIC_MODEL"
    else
        unset ANTHROPIC_MODEL
    fi
    
    if [ -n "$SAVED_CLAUDE_CODE_USE_BEDROCK" ]; then
        export CLAUDE_CODE_USE_BEDROCK="$SAVED_CLAUDE_CODE_USE_BEDROCK"
    else
        unset CLAUDE_CODE_USE_BEDROCK
    fi

    if [ -n "$SAVED_ANTHROPIC_API_KEY" ]; then
        export ANTHROPIC_API_KEY="$SAVED_ANTHROPIC_API_KEY"
    else
        unset ANTHROPIC_API_KEY
    fi
    
    print_success "Environment restored"
}

trap restore_environment EXIT

# Launch Claude Code
claude "${ARGS[@]}"
